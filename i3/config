##############################
#
# Mod and Sup Keys
#
##############################


set $mod Mod1
set $sup Mod4


##############################
#
# Autostart
#
##############################


# Keyboard layout
exec_always --no-startup-id setxkbmap de

# Keyboard speed
exec_always --no-startup-id xset r rate 200 25

# Unused mouse disappears
exec --no-startup-id unclutter

# Autostarting screen-locker on suspend
exec_always --no-startup-id xss-lock -- betterlockscreen -l blur

# Auto-mounting USB
exec_always --no-startup-id "udiskie -n -T"

# Notifications
exec_always --no-startup-id "killall dunst;dunst &"

# Polkit
exec_always --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Set bluetooth off on startup
exec_always --no-startup-id bluetooth off


##############################
#
# Design
#
##############################


# Font
font pango: SauceCodePro Nerd Font Medium 13

# Add this to your .xinitrc or whatever file starts programs on startup.
exec_always --no-startup-id wal -i "$(< "${HOME}/.cache/wal/wal")"

# Compton - Compositor
exec_always --no-startup-id "killall -q compton;compton -b --dbus"

# Polybar
exec_always --no-startup-id /home/niko/.config/polybar/launch.sh

# Gap sizes
# smart_gaps on
gaps inner 5
gaps outer 1

# Window border style
default_border pixel 1

# Pywal colors and alternative color in case of loding failure
set_from_resource $fg i3wm.color7 #fff
set_from_resource $bg i3wm.color2 #000

# Window colors
# class                 border   backgr.   text   indicator   child_border
client.focused          $fg      $bg       $fg    $bg         $bg
client.focused_inactive $bg      $bg       $fg    $bg         $bg
client.unfocused        $bg      $bg       $fg    $bg         $bg
client.urgent           $bg      $bg       $fg    $bg         $bg
client.placeholder      $bg      $bg       $fg    $bg         $bg
client.background       $bg      $bg       $fg    $bg         $bg


##############################
#
# Workspaces
#
##############################


# Names For Default Workspaces
set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "10"


##############################
#
# Keybindings
#
##############################


# ===== System ===============

# Reload i3 config
bindsym $mod+Shift+c reload

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec i3-msg exit

# ===== Window Management ====

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Kill Focused Window
bindsym $mod+Shift+q kill

# Change Window Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move Window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split Horizontally
bindsym $mod+Shift+s split h

# Split Vertically
bindsym $mod+s split v

# Fullscreen
bindsym $mod+f fullscreen toggle

# Change Container Layout (Stacked, Tabbed, Toggle Split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split

# Toggle Tiling / Floating
bindsym $mod+Shift+space floating toggle

# Change Focus Between Tiling / Floating Windows
bindsym $mod+space focus mode_toggle

# Focus The Parent Container
bindsym $mod+a focus parent

# Resize Window
mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # Escape Resize Mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# ===== Workspaces ===========

# Switch To Workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10

# Move Focused Container To Workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

# ===== Audio ================

# Increase Sound Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%

# Decrease Sound Volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%

# Mute Sound
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# ===== Screen brightness ====

# Increase Screen Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10

# Decrease Screen Brightness
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10

# ===== Touchpad =============

# Media Player Controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# ===== Applications =========

# Launcher
bindsym $mod+d exec --no-startup-id "rofi -config ~/.config/rofi/config -show drun"

# Network
bindsym $mod+n exec --no-startup-id "networkmanager_dmenu -sort"

# Terminal
bindsym $mod+Return exec termite

# Screenshot
bindsym Print exec "scrot -q 100 '%d-%m-%Y@%T.png' -e 'mv $f ~/pictures/screenshots'"

# Browser
bindsym $sup+w exec firefox

# Remmina
bindsym $sup+r exec remmina

# VS-Code
bindsym $sup+c exec "code -n"

# Dbeaver
bindsym $sup+d exec dbeaver

# Lockscreen
bindsym $mod+shift+x exec --no-startup-id betterlockscreen -l blur

# Pywal - Generate new theme
bindsym $sup+t exec "wal -t -i /home/niko/pictures/wallpapers/Vibrant"

# Apply pywal to lockscreen
bindsym $sup+l exec termite --exec=" betterlockscreen -u "$(< "${HOME}/.cache/wal/wal")" -r 1920x1080 -b 1.0"
