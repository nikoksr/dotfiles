# Alias
[alias]
    ps = push
    psu = push -u
    psom = push origin master
    psod = push origin develop 
    pl = pull
    plr = pull --rebase
    st = status
    co = checkout
    ci = commit
    br = branch
    df = diff
    mg = merge
    lg = log -p
    rso = remote show origin
    rv = remote -v
    me = config user.name
    unstage = reset HEAD
    undo = reset --soft HEAD~1
    undo-hard = git reset --hard HEAD~1

