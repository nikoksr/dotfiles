! Enabled modi
rofi.modi:                           drun,run,ssh

! Window opacity
rofi.opacity:                        100

! Window width
rofi.width:                          50

! Number of lines
rofi.lines:                          15

! Number of columns
rofi.columns:                        1

! Font to use
rofi.font:                           SauceCodePro Nerd Font 12

! Border width
rofi.bw:                             1

! Location on screen
rofi.location:                       0

! Padding
rofi.padding:                        5

! Y-offset relative to location
rofi.yoffset:                        0

! X-offset relative to location
rofi.xoffset:                        0

! Always show number of lines
rofi.fixed-num-lines:                true 

! Terminal to use
rofi.terminal:                       termite

! Ssh client to use
rofi.ssh-client:                     ssh

! Ssh command to execute
rofi.ssh-command:                    {terminal} --exec {ssh-client} {host}

! Run command to execute
rofi.run-command:                    {cmd}

! Command to get extra run targets
rofi.run-list-command:               

! Run command to execute that runs in shell
rofi.run-shell-command:              {terminal} --exec {cmd}

! Command executed on accep-entry-custom for window modus
rofi.window-command:                 xkill -id {window}

! Disable history in run/ssh
rofi.disable-history:                false

! Use levenshtein sorting
rofi.levenshtein-sort:               false

! Set case-sensitivity
rofi.case-sensitive:                 false

! Cycle through the results list
rofi.cycle:                          true

! Enable sidebar-mode
rofi.sidebar-mode:                   false

! Row height (in chars)
rofi.eh:                             1

! Enable auto select mode
rofi.auto-select:                    false

! Parse hosts file for ssh mode
rofi.parse-hosts:                    true 

! Parse known_hosts file for ssh mode
rofi.parse-known-hosts:              true

! Set the modi to combine in combi mode
rofi.combi-modi:                     drun,run

! Do a more fuzzy matching
rofi.fuzzy:                          true 

! Use glob matching
rofi.glob:                           false

! Use regex matching
rofi.regex:                          false

! Tokenize input string
rofi.tokenize:                       true

! Monitor id to show on
rofi.m:                              -1

! Margin between rows
rofi.line-margin:                    2

! Pre-set filter
rofi.filter:                         

! Separator style (none, dash, solid)
rofi.separator-style:                solid 

! Hide scroll-bar
rofi.hide-scrollbar:                 false

! Fullscreen
rofi.fullscreen:                     false

! Fake transparency
rofi.fake-transparency:              false

! DPI
rofi.dpi:                            -1

! Threads to use for string matching
rofi.threads:                        2

! Scrollbar width
rofi.scrollbar-width:                8

! Scrolling method. (0: Page, 1: Centered)
rofi.scroll-method:                  0

! Background to use for fake transparency. (background or screenshot)
rofi.fake-background:                screenshot

! Pidfile location
rofi.pid:                            /run/user/1000/rofi.pid

! Theme
rofi.theme: ~/.cache/wal/colors-rofi-dark.rasi

! "Whether to load and show icons" Set from: Default
rofi.show-icons:                     true

! "Theme to use to look for icons" Set from: Default
rofi.drun-icon-theme:               default                
