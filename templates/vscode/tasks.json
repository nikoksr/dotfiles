{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake-debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "command": "cmake",
      "args": ["-DCMAKE_BUILD_TYPE=Debug", "../.."],
      "problemMatcher": "$gcc"
    },
    {
      "label": "make-debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "command": "make",
      "args": ["-j6"],
      "dependsOn": ["cmake-debug"]
    },
    {
      "label": "build-debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "dependsOn": ["make-debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "echo",
      "args": ["'Building debug...'"],
      "problemMatcher": "$gcc",
      "isBackground": true
    },
    {
      "label": "valgrind-debug-bin",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/debug/bin"
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "command": "valgrind",
      "args": [
        "--leak-check=full",
        "./${workspaceFolderBasename}",
        "e10adc3949ba59abbe56e057f20f883e",
        "${workspaceFolder}/passwd.txt"
      ],
      "dependsOn": ["cppcheck"]
    },
    {
      "label": "check-debug",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/debug"
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "command": "echo",
      "args": ["'Checking debug...'"],
      "dependsOn": ["valgrind-debug-bin"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "cmake-release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/release"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "command": "cmake",
      "args": ["-DCMAKE_BUILD_TYPE=Release", "../.."],
      "problemMatcher": "$gcc"
    },
    {
      "label": "make-release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/release"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "command": "make",
      "args": ["-j6"],
      "dependsOn": ["cmake-release"]
    },
    {
      "label": "build-release",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build/release"
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "dependsOn": ["make-release"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "echo",
      "args": ["'Building release...'"],
      "problemMatcher": "$gcc",
      "isBackground": true
    },
    {
      "label": "cppcheck",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/src"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "command": "cppcheck",
      "args": [
        "--enable=all",
        "--suppress=missingIncludeSystem",
        "*.hpp",
        "*.cpp"
      ]
    }
  ]
}
